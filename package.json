{
  "name": "calisaurus-boardgames",
  "version": "1.0.0",
  "description": "Code and content for boardgames.calisaurus.net",
  "main": "index.js",
  "scripts": {
    "start": "npm run build && http-server build/",
    "clean": "mkdir -p build && rm -rf build/*",
    "build": "npm run clean && cp -r content/html/* build && cp -r content/images/* build && cp -r styles/* build",
    "test": "cross-env SITE_URL='http://localhost:8080' mocha",
    "test:live": "cross-env SITE_URL='http://boardgames.calisaurus.net' mocha",
    "watch": "nodemon --exec npm start"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hannahbunce/calisaurus-boardgames.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/hannahbunce/calisaurus-boardgames/issues"
  },
  "homepage": "https://github.com/hannahbunce/calisaurus-boardgames#readme",
  "devDependencies": {
    "chai": "^4.1.2",
    "cross-env": "^5.1.4",
    "nodemon": "^2.0.2",
    "promise-path": "^1.3.0"
  },
  "dependencies": {
    "handlebars": "^4.3.0",
    "mocha": "^5.1.1",
    "vue": "^2.6.11"
  },
  "nodemonConfig": {
    "ignore": ["build/*"],
    "delay": "800",
    "ext": "js,json,html,css"
  }
}
